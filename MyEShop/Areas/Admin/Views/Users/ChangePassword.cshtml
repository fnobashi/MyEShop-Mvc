@using MyEShop.Areas.Admin.Models.ViewModels.Users;
@model ChangePasswordViewModel
@{
	ViewData["Title"] = "افزودن کاربر جدید";
}


<div class="row">
	<!-- Basic with Icons -->
	<div class="col-xxl">
		<div class="card mb-4">
			<div class="card-header d-flex align-items-center justify-content-between">
				<h5 class="mb-0">افزودن</h5>
			</div>
			<div class="card-body">
				<form asp-action="ChangePassword" asp-controller="Users" asp-antiforgery="true" method="post">
					<input type="hidden" asp-for="Id" />
					<div class="row mb-3">
						<label class="col-sm-2 form-label" asp-for="Password"></label>
						<div class="col-sm-10">
							<div class="input-group">
								<input asp-for="Password" class="form-control phone-mask" placeholder="کلمه عبور جدید را وارد نمایید" aria-label="کلمه عبور جدید را وارد نمایید">
							</div>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 form-label" asp-for="RePassword"></label>
						<div class="col-sm-10">
							<div class="input-group">
								<input asp-for="RePassword" class="form-control phone-mask" placeholder="کلمه عبورجدید را تکرار نمایید " aria-label="کلمه عبورجدید را تکرار نمایید ">
							</div>
							<span asp-validation-for="RePassword" class="text-danger"></span>
						</div>
					</div>
					<div class="row justify-content-end">
						<div class="col-sm-10">
							<button type="submit" class="btn btn-primary">تغییر کلمه عبور</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}