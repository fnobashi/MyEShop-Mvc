@using MyEShop.Areas.Admin.Models.ViewModels.Users;
@model UpdateViewModel
@{
	ViewData["Title"] = "ویرایش کاربر";
}



<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-3">
            <li class="nav-item">
                <a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user-plus me-1"></i> افزودن حساب جدید</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Users" asp-area="Admin"><i class="bx bx-user me-1"></i> لیست کاربران</a>
            </li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">ویرایش کاربر</h5>
            <!-- Account -->
            <form asp-action="Edit" asp-controller="Users" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageName"/>
                <div class="card-body">
                    <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <img src="~/Images/Account/@Model.ImageName" alt="user-avatar" class="d-block rounded" id="uploadedAvatar" width="100" height="100">
                        <div class="button-wrapper">
                            <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                <span class="d-none d-sm-block">بارگزاری عکس جدید</span>
                                <i class="bx bx-upload d-block d-sm-none"></i>
                                <input type="file" id="upload" name="userImg" class="account-file-input" accept="image/png, image/jpeg ,image/jpg" hidden="">
                            </label>
                            <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                                <i class="bx bx-reset d-block d-sm-none"></i>
                                <span class="d-none d-sm-block">بازنشانی</span>
                            </button>
                            <p class="text-muted mb-0">فقط عکس با فرمت PNG و JPG تا حداکثر 800 کیلوبایت آپلود شود</p>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
                <hr class="my-0">
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input class="form-control" asp-for="Name" autofocus="">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Family" class="form-label"></label>
                            <input class="form-control" asp-for="Family">
                            <span asp-validation-for="Family" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input class="form-control" asp-for="Email" placeholder="john.doe@example.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    
                        <div class="mb-3 col-md-2">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsAdmin">
                                <label class="form-check-label" asp-for="IsAdmin"></label>
                            </div>
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsOperator">
                                <label class="form-check-label" asp-for="IsOperator"></label>
                            </div>
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsNormalUser">
                                <label class="form-check-label" asp-for="IsNormalUser"></label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">ویرایش</button>
                    </div>
                </div>
                <!-- /Account -->
            </form>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/admin/assets/js/pages-account-settings-account.js"></script>
    <partial name="_ValidationScriptsPartial" />
}